                        <TextBlock Text="总计OK计数" FontSize="10" Foreground="#666" Margin="0,3"/>
                    </StackPanel>
                    <!--<StackPanel Margin="5">
                        <TextBlock Text="2.1m/s" FontSize="16"/>
