<UserControl x:Class="ControlCCL.Controls.BindableRichTextBoxControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ControlCCL.Controls"
             mc:Ignorable="d" BorderThickness="0" >   
        <RichTextBox  Name="RTB" Grid.Row="0">
            <RichTextBox.Document>
                <FlowDocument Focusable="True" LineHeight="1"></FlowDocument>
            </RichTextBox.Document>
        </RichTextBox>   
</UserControl>
